{
  "name": "api-books/restful",
  "description": "API RESTful para gesti√≥n de libros con PHP y PostgreSQL",
  "type": "project",
  "require": {
    "php": "^8.0",
    "vlucas/phpdotenv": "^5.5",
    "ramsey/uuid": "^4.7",
    "ext-pdo": "*",
    "ext-json": "*",
    "ext-mbstring": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
